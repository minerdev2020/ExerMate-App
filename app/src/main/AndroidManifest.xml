<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.minerdev.exermate">

    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Exermate"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.activity.FullScreenPhotoActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.UserInfoActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.GoalSettingActivity"
            android:exported="true" />
        <activity android:name=".view.activity.EditPostActivity" />
        <activity android:name=".view.activity.ChatActivity" />
        <activity android:name=".view.activity.PostActivity" />
        <activity android:name=".view.activity.SignUpActivity" />
        <activity
            android:name=".view.activity.LoginActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.MainActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
    </application>

</manifest>